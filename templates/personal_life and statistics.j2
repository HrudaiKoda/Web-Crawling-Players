
{% macro personal_life(Player_Name , birth_place , birth_date, Education ,Relations , death_date , deathplace )%}
    ==వ్యక్తిగత జీవితం== 

    {%- if birth_place != 'nan' and birth_date != 'nan'%}
        {%- set line1 = [Player_Name, birth_place , "లో" ,birth_date,"న జన్మించాడు."] | join('')-%}
        {%- set line2 = [Player_Name ,birth_date,"న",birth_place, "లో జన్మించాడు."] | join('')-%}
        {{[line1 , line2] | random}}

    {%- elif birth_date != 'nan' and birth_place == 'nan'%}
        {%-set line1 =  [Player_Name ,birth_date,"న జన్మించాడు."] | join('')-%}
        {{[line1] | random}}

    {%- elif birth_date == 'nan' and birth_place != 'nan'%}
        {%-set line1 =  [Player_Name ,birth_place, "లో జన్మించాడు."] | join('')-%}
        {{[line1] | random}}
    {%- endif -%}

    {%- if Education != "nan"-%}
        {%-set line1 = ["అతడు",Education, "లో విద్యను పూర్తి చేశాడు."] | join('')-%}
        {%-set line2 = ["అతడు తన విద్యను",Education,"లో పూర్తి చేశాడు."] | join('')-%}
        {{[line1 ,line2] | random}}
    {%- endif -%}

    {%- if Relations != "nan" -%}
        {%-set line1 = ["అతని బంధువులు"] | join('')-%}
        {{[line1] | random}}
            {%- for pair in Relations -%}
                {{pair[0]+ ' - '}}
                {{pair[1]+ '\n'}}
            {%- endfor -%}
    {%-endif-%}

    {%-if death_date != 'nan'-%}
        {%-set line1 = ["అతడు",death_date,"న",death_place,"లో మరణించాడు"] | join('')-%}
        {{[line1] | random}}
    {%- endif -%}
{%endmacro%}


