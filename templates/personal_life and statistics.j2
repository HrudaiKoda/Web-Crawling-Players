    {{[line1] | random}}
    {%- endif-%}

    {%-if AWAY_Avg != -1 -%}
    {%-set line1 = ["ప్రత్యర్థి జట్టు దేశంలో ఆడిన ఆటలలో, అతడు బ్యాటింగ్ సగటు స్కోరు",AWAY_Avg,","] | join('') -%} 
    {{[line1,line2] | random}}
    {%- endif-%}

    {%-if AWAY_Runs != -1 -%}
    {%-set line1 = ["మొత్తంగ ",AWAY_Runs,"పరుగులు చేశాడు"] | join('') -%} 
    {{[line1] | random}}
    {%- endif-%}

    {%-if AWAY_Wkts != -1 -%}
    {%-set line1 = ["మరియు బౌలింగ్ లో",AWAY_Wkts,"వికెట్లు సాధించాడు."] | join('') -%} 
    {{[line1] | random}}
    {%- endif-%}


    {%-if NEUTRAL_Avg != -1 -%}
    {%-set line1 = ["తటస్థ మైదానంలో ఆడిన ఆటలలో, అతడు యాటింగ్ సగటు స్కోరు",NEUTRAL_Avg,","] | join('') -%} 
    {{[line1] | random}}
    {%- endif-%}

    {%-if NEUTRAL_Runs != -1 -%}
    {%-set line1 = ["మొత్తంగ",NEUTRAL_Runs ,"పరుగులు చేశాడు"] | join('') -%} 
    {{[line1] | random}}
    {%- endif-%}

    {%-if NEUTRAL_Wkts != -1 -%}
    {%-set line1 = ["మరియు బౌలింగ్ లో",NEUTRAL_Wkts,"వికెట్లు సాధించాడు."] | join('') -%} 
    {{[line1] | random}}
    {%- endif-%}
{%- endmacro -%}

